{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "composite": true,
    "declarationMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "allowJs": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
  },
  "types": [
    "node",
    "jest"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/bin.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.cjs",
    "src/**/*.test.ts",
    "src/**/*.test.cjs"
  ]
}