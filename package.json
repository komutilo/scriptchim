{
  "name": "scrapty",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "A quick and dirty way to run an ordered queue of tasks focused on cross OS command line processes.",
  "volta": {
    "node": "20.11.0",
    "npm": "10.4.0",
    "pnpm": "8.15.1"
  },
  "engines": {
    "node": "20.11.0",
    "npm": "10.4.0"
  },
  "main": "dist/index.js",
  "types": "dist/**/*.d.ts",
  "bin": {
    "scrapty": "dist/bin.js"
  },
  "scripts": {
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint . -c ./config/eslint.config.mjs --debug",
    "unittest": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --config=./config/jest.config.mjs --forceExit --detectOpenHandles --passWithNoTests --watchAll=false --coverage",
    "test": "cross-env pnpm audit && pnpm lint && pnpm unittest",
    "build": "cross-env rimraf ./dist && tsc && node ./config/esbuild.config.mjs",
    "scrapty": "node dist/bin.js"
  },
  "keywords": [
    "cli",
    "scripts",
    "task",
    "queue",
    "cmd",
    "command",
    "cross-env"
  ],
  "author": {
    "name": "Bruno Araujo",
    "email": "bruno@komutilo.com",
    "url": "https://github.com/brunurd"
  },
  "contributors": [
    {
      "name": "Bruno Araujo",
      "email": "bruno@komutilo.com",
      "url": "https://github.com/brunurd"
    }
  ],
  "homepage": "https://github.com/komutilo/scrapty#readme",
  "bugs": {
    "url": "https://github.com/komutilo/scrapty/issues",
    "email": "bruno@komutilo.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/komutilo/scrapty.git"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "promisify-child-process": "^4.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@jest/globals": "^29.7.0",
    "@types/cross-spawn": "^6.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "esbuild": "^0.23.1",
    "eslint": "^9.10.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "rimraf": "^6.0.1",
    "spawk": "^1.8.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.5.0"
  }
}